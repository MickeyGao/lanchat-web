<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="hibernate.connection.url"><!-- 填写数据库路径 -->
			jdbc:mysql://127.0.0.1:3306/lan
		</property>
		<property name="connection.username">root</property><!-- 填写数据库用户名 -->
		<property name="connection.password">root</property><!-- 填写数据库密码 -->
		<property name="connection.driver_class"><!-- 填写数据库驱动 -->
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">lan</property>
		<mapping resource="./UserId.hbm.xml" />
		<mapping resource="./Department.hbm.xml" />
		<mapping resource="./Job.hbm.xml" />
		<mapping resource="./User.hbm.xml" /><!-- 表映射文件-->
	
	</session-factory>

</hibernate-configuration>